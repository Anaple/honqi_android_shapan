<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/car_list"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        >
        <ImageView
            android:id="@+id/car_image_ico"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/black_car"
            app:layout_heightPercent="70%"
            android:gravity="center"
            app:layout_marginLeftPercent="3%"
            app:layout_widthPercent="10%" />


        <!--  情景  -->
        <TextView
            android:id="@+id/car_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/car_image_ico"
            app:layout_marginTopPercent="30%"
            android:text="车1"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_marginLeftPercent="3%"
            app:layout_marginRightPercent="3%"
            />
        <TextView
            android:id="@+id/car_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/car_title"
            android:text="电量:正在获取"
            android:textSize="12sp"
            android:layout_marginTop="20sp"

            >

        </TextView>
        <TextView
            android:id="@+id/car_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/car_title"
            android:layout_below="@+id/car_battery"
            android:text="速度:正在获取"
            android:textSize="12sp"
            android:layout_marginTop="10sp"

            >
        </TextView>
        <TextView
            android:id="@+id/car_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/car_battery"
            android:text="目的:正在获取"
            android:textSize="12sp"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="15sp"

            >

        </TextView>
        <TextView
            android:id="@+id/car_will"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/car_battery"
            android:layout_below="@+id/car_now"
            android:text="位置:正在获取"
            android:textSize="12sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="15sp"

            >
        </TextView>


