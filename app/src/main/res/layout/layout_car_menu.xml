<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/system_control"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/button_circle_shape_left"
        app:layout_heightPercent="96%"
        app:layout_marginBottomPercent="2%"
        app:layout_marginLeftPercent="3%"
        app:layout_marginRightPercent="3%"
        app:layout_marginTopPercent="5%"
        app:layout_widthPercent="97%">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="车辆选择"
            android:textColor="#000"
            android:textSize="12sp"

            app:layout_marginLeftPercent="2%"
            app:layout_marginTopPercent="0%" />

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@drawable/button_circle_shape"
            app:layout_heightPercent="40%"
            app:layout_marginLeftPercent="0%"
            app:layout_marginTopPercent="5%"
            app:layout_widthPercent="100%">


            <!--  车辆选择  -->
            <ListView
                android:id="@+id/car_choose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:divider="#ffffff"
                android:dividerHeight="0dp"
                android:listSelector="@color/white" />

        </androidx.percentlayout.widget.PercentRelativeLayout>

        <TextView
            android:id="@+id/view_car_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="视角控制"
            android:textColor="#000"
            android:textSize="12dp"
            app:layout_marginLeftPercent="2%"
            app:layout_marginTopPercent="46%" />

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/joy"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@drawable/button_circle_shape"
            android:visibility="gone"
            app:layout_heightPercent="50%"
            app:layout_marginLeftPercent="0%"
            app:layout_marginTopPercent="50%"
            app:layout_widthPercent="100%">


            <com.zwl9517hotmail.joysticklibrary.CircleViewByImage
                android:id="@+id/joystick_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                app:background="@drawable/playview_platform_transverse_handle_normal"
                app:foreground="@drawable/control_foreground"

                />

            <Button
                android:id="@+id/view_change_deafult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恢复默认"
                android:textSize="10dp"
                app:layout_marginTopPercent="90%">

            </Button>
        </androidx.percentlayout.widget.PercentRelativeLayout>

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/point_start"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:visibility="visible"
            app:layout_heightPercent="50%"
            app:layout_marginLeftPercent="0%"
            app:layout_marginTopPercent="50%"
            app:layout_widthPercent="100%">

            <TextView
                android:id="@+id/click_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:text="text"
                android:textColor="@color/black"

                android:textSize="26dp"></TextView>

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/point_start_btn"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="19dp"
                android:background="@drawable/button_circle_shape_item_blue"
                app:layout_heightPercent="20%"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_marginRightPercent="1%"
                app:layout_marginTopPercent="70%"
                app:layout_widthPercent="100%">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"


                    android:layout_toRightOf="@id/car_change_icon"
                    android:text="出发"
                    android:textColor="#1890ff"
                    android:textSize="26dp"

                    />


                <!--  车辆图标  -->

            </androidx.percentlayout.widget.PercentRelativeLayout>
        </androidx.percentlayout.widget.PercentRelativeLayout>

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/back_app"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_heightPercent="4%"
            app:layout_marginLeftPercent="80%"
            app:layout_marginTopPercent="0%"
            app:layout_widthPercent="20%">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="返回"
                android:textSize="12dp" />

        </androidx.percentlayout.widget.PercentRelativeLayout>


    </androidx.percentlayout.widget.PercentRelativeLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>





